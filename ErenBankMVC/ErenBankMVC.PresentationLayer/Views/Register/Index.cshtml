@model AppUserRegisterDto

@{
    Layout = null;
}

<!DOCTYPE html>
<html>


<head>

	<title>Eren Bank - Yeni Kullanıcı Kaydı</title>


	<meta name="viewport" content="width=device-width, initial-scale=1">
	<meta http-equiv="Content-Type" content="text/html; charset=utf-8">
	<meta name="keywords" content="Existing Login Form Widget Responsive, Login Form Web Template, Flat Pricing Tables, Flat Drop-Downs, Sign-Up Web Templates, Flat Web Templates, Login Sign-up Responsive Web Template, Smartphone Compatible Web Template, Free Web Designs for Nokia, Samsung, LG, Sony Ericsson, Motorola Web Design">
	<script type="application/x-javascript"> addEventListener("load", function() { setTimeout(hideURLbar, 0); }, false); function hideURLbar(){ window.scrollTo(0,1); } </script>


	<link href="~/Temelar/register/css/popuo-box.css" rel="stylesheet" type="text/css" media="all" />


	<link rel="stylesheet" href="~/Temelar/register/css/style.css" type="text/css" media="all">


	<link href="//fonts.googleapis.com/css?family=Quicksand:300,400,500,700" rel="stylesheet">


</head>

<body>

	<h1>Eren Bank - Müşteri Ol</h1>

	<div class="w3layoutscontaineragileits">
		<h2>Bireysel Hesap Başvurusu</h2>

		<form method="post">

			<input type="text" asp-for="Name" placeholder="Adınızı giriniz" required="">

			<input type="text" asp-for="Surname" placeholder="Soyadınızı giriniz" required="">

			<input type="text" asp-for="Username" placeholder="kullanıcı adınızı giriniz" required="">

			<input type="email" asp-for="Email" placeholder="Email adresinizi giriniz." required="">

			<input type="password" asp-for="Password" placeholder="Şifresinizi giriniz" required="">

			<input type="password" asp-for="ConfirmPassword" placeholder="Şifrenizi tekrar giriniz" required="">
			
			<ul class="agileinfotickwthree">
				<li>
					<input type="checkbox" id="brand1" value="">
					<label for="brand1"><span></span>Kullanım Şartlarını Okudum.</label>
					<a href="#">Hesabınız Var mı?</a>
				</li>
			</ul>

			<div class="aitssendbuttonw3ls">
				<input type="submit" value="LOGIN">
				<p> Anasayfa'ya Dön! <span>→</span> <a class="w3_play_icon1" href="#small-dialog1"> Eren Bank</a></p>
				<div class="clear"></div>
			</div>
		</form>
	</div>


	<div class="w3footeragile">
		<p>&copy; @DateTime.Now.Year Eren Bank - Tüm Hakları Saklıdır. | Design by <a href="http://quebeecdigital.com" target="_blank">QueBeec Digital</a></p>
	</div>


	<script type="text/javascript" src="~/Temelar/register/js/jquery-2.1.4.min.js"></script>

	<!-- pop-up-box-js-file -->
	<script src="~/Temelar/register/js/jquery.magnific-popup.js" type="text/javascript"></script>
	<!--//pop-up-box-js-file -->
	<script>
		$(document).ready(function() {
		$('.w3_play_icon,.w3_play_icon1,.w3_play_icon2').magnificPopup({
			type: 'inline',
			fixedContentPos: false,
			fixedBgPos: true,
			overflowY: 'auto',
			closeBtnInside: true,
			preloader: false,
			midClick: true,
			removalDelay: 300,
			mainClass: 'my-mfp-zoom-in'
		});

		});
	</script>

</body>
<!-- //Body -->

</html>

